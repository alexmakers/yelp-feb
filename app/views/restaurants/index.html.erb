<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
    <h1><%= link_to restaurant.name, restaurant_path(restaurant) %></h1>

    <%= link_to 'Edit', edit_restaurant_path(restaurant) %> |
    <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete, data: { confirm: 'Are you sure?' } %> |
    <%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %>

    <h3 class='average_review'>
      <%= restaurant.average_score %> / 5
    </h3>
  <% end %>
<% else %>
  No restaurants yet
<% end %>

<br>
<%= link_to 'Add a restaurant', new_restaurant_path %>
